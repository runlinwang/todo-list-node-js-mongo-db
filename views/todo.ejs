<!DOCTYPE html>
<head>
<title>Todo App</title>

<!-- linking stylesheets -->
<link rel="stylesheet" href="/static/stylesheets/style.css" type="text/css">
<link href="https://fonts.googleapis.com/css?family=Baloo+Bhai|Candal|Chewy&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
</head>

<body>
<!-- The To Do Container is the first on the page, containing everything -->
<div class="todo-container">
<!-- The title -->
<h2>To-Do List</h2>
<div class="todo">
<!-- Adding a form which takes a text input and uses the POST method. Button is used to submit it -->
<form action="/" method="POST" class="todo-header">
<input type="text" name="content">
<button type="submit"><span class="fas fa-plus"></span></button>
</form>
<!-- starting the actual todo list that appears -->
<ul class="todo-list">
    <!-- this JS code makes it so that for each individual item, we show it in the same way -->
    <% todoTasks.forEach(details => { %>
    <li class="todo-list-item">
    <div class="todo-list-item-name"><%= details.content %></div>
    <!-- adding the edit button -->
    <a href="/edit/<%= details._id %>" class="edit">
    <span class="fas fa-edit"></span>
    </a>
    <!-- adding the remove button -->
    <a href="/remove/<%= details._id %>" class="remove">
    <span class="fas fa-times"></span>
    </a>
    </li>
    <% }) %>
    </ul>
</div>
</div>
</body>